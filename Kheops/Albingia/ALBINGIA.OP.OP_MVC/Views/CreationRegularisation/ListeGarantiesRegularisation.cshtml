    <div class="overlay-background" style="z-index:5" >
    </div>
    <div style="padding: 10px; left: 277px; top: 43px; float: left; display: block; position: absolute; z-index: 6; background-color: rgb(255, 255, 255);">
        <div id="dvBodyDetail">
        </div>
    </div>
</div>

<div id="divInfoPeriodGar" class="None">
    <div class="overlay-background" style="z-index:13" >
    </div>
    <div id="divDataInfoPeriodGar" class="dvDataInfoPeriodGar"></div>
