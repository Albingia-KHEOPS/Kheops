@model ALBINGIA.OP.OP_MVC.Models.ModeleCreationSaisie.ModeleContactAdresse
@Html.Hidden("ContactAdresse.NoChrono", (Model.NoChrono), new { id = "ContactAdresse_NoChrono" })
@Html.Hidden("ContactAdresse.UrlHexavia", ALBINGIA.OP.OP_MVC.MvcApplication.URL_HEXAVIA, new { id = "UrlHexavia" })
@Html.Hidden("ContactAdresse.UrlBackHexavia", ALBINGIA.OP.OP_MVC.MvcApplication.URL_BACKHEXAVIA, new { id = "UrlBackHexavia" })
@Html.Hidden("ContactAdresse.MatriculeHexavia", (Model.MatriculeHexavia), new { id = "ContactAdresse_MatriculeHexavia" })
<input type="hidden" id="ContactAdresse_Latitude" name="ContactAdresse.Latitude" value="@(Model.Latitude)" albcontext="adrbase" />
<input type="hidden" id="ContactAdresse_Longitude" name="ContactAdresse.Longitude" value="@(Model.Longitude)" albcontext="adrbase" />

<div class="HeightRow">
    <div class="FloatLeft">
        <label>Adresse :</label>
    </div>
    <div name="btnAdresse" albContext="@Model.Context" class="@(Model.SaisieHexavia && (!Model.ReadOnly || Model.IsModifHorsAvn) ? "FloatLeft CursorPointer" : "FloatLeft")" style="padding-left: 20px; margin-top: -4px;">
        <img src="@Url.Content("/Content/Images/moreinfo.png")" width="22" height="22" />
    </div>
</div>
<div class="HeigthRowAdr">
    <div class="FloatLeft">
        <label id="lblInfoBatiment">@Model.Batiment</label>
    </div>
    <div class="FloatLeft">
        <label id="lblInfoNo">@(!string.IsNullOrEmpty(Model.No) ? string.Format("{0}", Model.No + (string.IsNullOrEmpty(Model.No2) ? "" : "/" + Model.No2)) : string.Empty) </label>
    </div>
    <div class="FloatLeft">
        <label id="lblInfoExtension">@Model.Extension</label>
    </div>
    <div class="FloatLeft">
        <label id="lblInfoVoie">@Model.Voie</label>
    </div>
    <div class="FloatLeft">
        <label id="lblInfoDistribution">@Model.Distribution</label>
    </div>
</div>
<div class="HeigthRowAdr">
    <div class="FloatLeft">
        <label id="lblInfoCodePostal">
            @(!string.IsNullOrEmpty(Model.CodePostal) && Model.CodePostal != "00000" && Model.CodePostal != "000" && Model.CodePostal != "0" ?
                  Model.CodePostal :
                  !string.IsNullOrEmpty(Model.CodePostalCedex) && Model.CodePostalCedex != "00000" && Model.CodePostalCedex != "000" && Model.CodePostalCedex != "0" ? Model.CodePostalCedex : string.Empty)
    </label>
</div>
<div class="FloatLeft">
    <label id="lblInfoVille">@(!string.IsNullOrEmpty(Model.VilleCedex) ? Model.VilleCedex : Model.Ville)</label>
</div>
</div>


<div id="divInfoAdr" name="divInfoAdr" albContext="@(Model.Context)" class="nInfoBandeau">
    <div id="divErrorHexavia" name="divErrorHexavia" albContext="@(Model.Context)" class="FieldRow MsgErrorHexavia">
        <div>
            Adresse non valide
        </div>
    </div>

    <div class="DoubleGenericColumn">
        <div class="HeightRow nBGEntete1">
            <div class="FloatLeft">
                <label class="Block">Bâtiment | ZI</label>
            </div>
            <div class="FloatLeft">
                <label id="lblBatiment">@Model.Batiment</label>
                <input type="hidden" albhorsavn id="ContactAdresse_Batiment" name="ContactAdresse.Batiment" class="@(Model.ReadOnly ? "readonly DoubleInputHalfBlock" : "DoubleInputHalfBlock")" readonly="readonly" tabindex="@(Model.FirstIndex)" value="@(Model.Batiment)" />
            </div>
        </div>
        <div class="HeightRow nBGEntete2">
            <div class="FloatLeft">
                <label class="Block">N° | Ext | Voie</label>
            </div>
            <div class="FloatLeft PaddingRight">
                <label id="lblNo">@(Model.No + (string.IsNullOrEmpty(Model.No2) ? "" : "/" + Model.No2))</label>
                <input type="hidden" albhorsavn id="ContactAdresse_No" name="ContactAdresse.No" class="@(Model.ReadOnly ? "readonly HalfInput" : "HalfInput")" readonly="readonly" tabindex="@(Model.FirstIndex + 1)" value="@(Model.No + (string.IsNullOrEmpty(Model.No2) ? "" : "/" + Model.No2))" />
            </div>
            <div class="FloatLeft PaddingRight">
                <label id="lblExtension">@Model.Extension</label>
                <input type="hidden" albhorsavn id="ContactAdresse_Extension" name="ContactAdresse.Extension" class="@(Model.ReadOnly ? "readonly HalfInput" : "HalfInput")" readonly="readonly" tabindex="@(Model.FirstIndex + 2)" value="@(Model.Extension)" />
            </div>
            <div class="FloatLeft">
                <label id="lblVoie">@Model.Voie</label>
                <input type="hidden" albhorsavn id="ContactAdresse_Voie" name="ContactAdresse.Voie" class="@(Model.ReadOnly ? "readonly AdresseInput" : "AdresseInput")" readonly="readonly" tabindex="@(Model.FirstIndex + 3)" value="@(Model.Voie)" />
            </div>
        </div>
        <div class="HeightRow nBGEntete1">
            <div class="FloatLeft">
                <label class="Block">Distribution</label>
            </div>
            <div class="FloatLeft">
                <label id="lblDistribution">@Model.Distribution</label>
                <input type="hidden" albhorsavn id="ContactAdresse_Distribution" name="ContactAdresse.Distribution" class="@(Model.ReadOnly ? "readonly" : "")" readonly="readonly" tabindex="@(Model.FirstIndex + 4)" value="@(Model.Distribution)" />
            </div>
        </div>
        <div class="HeightRow nBGEntete2">
            <div class="FloatLeft">
                <label class="Block">CP | Ville</label>
            </div>
            <div class="FloatLeft PaddingRight">
                <label id="lblCodePostal">@(!string.IsNullOrEmpty(Model.CodePostal) && Model.CodePostal != "00000" && Model.CodePostal != "000" && Model.CodePostal != "0" ? Model.CodePostal : string.Empty)</label>
                <input type="hidden" albhorsavn id="ContactAdresse_CodePostal" name="ContactAdresse.CodePostal" class="@(Model.ReadOnly ? "readonly" : "")" readonly="readonly" tabindex="@(Model.FirstIndex + 5)" value="@(Model.CodePostal)" />
            </div>
            <div class="FloatLeft">
                <label id="lblVille">@Model.Ville</label>
                <input type="hidden" albhorsavn id="ContactAdresse_Ville" name="ContactAdresse.Ville" class="@(Model.ReadOnly ? "readonly AdresseInput" : "AdresseInput")" readonly="readonly" tabindex="@(Model.FirstIndex + 6)" value="@(Model.Ville)" />
            </div>
        </div>
        <div class="HeightRow nBGEntete1">
            <div class="FloatLeft">
                <label class="Block">CP | Ville (Cedex)</label>
            </div>
            <div class="FloatLeft PaddingRight">
                <label id="lblCodePostalCedex">@(!string.IsNullOrEmpty(Model.CodePostalCedex) && Model.CodePostalCedex != "00000" && Model.CodePostalCedex != "000" && Model.CodePostalCedex != "0" ? Model.CodePostalCedex : string.Empty)</label>
                <input type="hidden" albhorsavn id="ContactAdresse_CodePostalCedex" name="ContactAdresse.CodePostalCedex" class="@(Model.ReadOnly ? "readonly" : "")" readonly="readonly" tabindex="@(Model.FirstIndex + 7)" value="@(Model.CodePostalCedex)" />
            </div>
            <div class="FloatLeft">
                <label id="lblVilleCedex">@Model.VilleCedex</label>
                <input type="hidden" albhorsavn id="ContactAdresse_VilleCedex" name="ContactAdresse.VilleCedex" class="@(Model.ReadOnly ? "readonly AdresseInput" : "AdresseInput")" readonly="readonly" tabindex="@(Model.FirstIndex + 8)" value="@(Model.VilleCedex)" />
            </div>
        </div>
        <div class="HeightRow nBGEntete2">
            <div class="FloatLeft">
                <label class="Block">Pays</label>
            </div>
            <div class="FloatLeft">
                <label id="lblPays">@Model.Pays</label>
                <input type="hidden" albhorsavn id="ContactAdresse_Pays" name="ContactAdresse.Pays" class="@(Model.ReadOnly ? "readonly" : "")" readonly="readonly" tabindex="@(Model.FirstIndex + 9)" value="@(Model.Pays)" />
            </div>
        </div>
    </div>
</div>
