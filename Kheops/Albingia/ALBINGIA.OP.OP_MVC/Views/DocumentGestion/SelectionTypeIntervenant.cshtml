@model ALBINGIA.OP.OP_MVC.Models.ModelesDocumentGestion.LigneTypeIntervenant
<div class="FloatLeft" style="width: auto">
    <div class="GroupFull GroupWithBorder LargeurDetailsSelection">
        @Html.HiddenNoName("idDestinataireSelectionne", Model.idDestinataire)
        <div class="GradientSection MarginLeft10">
            <div class="HeightRow">
                <div class="FloatLeft">
                    <label class="Block LargeLabel BoldUnderline">Sélection d'un intervenant</label>
                </div>
            </div>
            <div class="HeightRow">
                <div class="FloatLeft">
                    <div class="FloatLeft">
                        <div class="PaddingLeft FloatLeft">
                            <input type="radio" id="modeRechInterAffaire" name="modeRechIntervenant" value="Affaire" checked="@(Model.IsFromAffaire )" />
                        </div>
                        <div class="PaddingLeft FloatLeft" style="padding-top: 2px;">
                            <label>de l'affaire</label>
                        </div>
                        <div class="PaddingLeft FloatLeft" style="padding-left:70px;">
                            <input type="radio" id="modeRechInterAutre" name="modeRechIntervenant" value="Autre" checked="@(!Model.IsFromAffaire )"/>
                        </div>
                        <div class="PaddingLeft FloatLeft" style="padding-top: 2px;">
                            <label>autre</label>
                        </div>
                    </div>
                </div>
                <div class="FloatLeft" style="padding-top: 2px;padding-left:20px;">
                    <div class="FloatLeft">
                        <label>Type d'intervenant</label>
                    </div>
                    <div class="FloatLeft" style="padding-left: 5px;">
                        <input type="hidden" albAutoComplete="autoCompIntervenantIsFromAffaire" value="@(Model.IsFromAffaire ? "1" : string.Empty)" albcontext="ajoutIntervenant"/>
                        @if (Model.IsFromAffaire)
                        {
                            @Html.AlbDropDownListFor(m => m.SelectedTypeIntervenant, Model.ListeTypesIntervenant, "TypeIntervenant", htmlAttributes: new { @id = "TypeIntervenant", @albAutoComplete = "autoCompIntervenantType", @albcontext="ajoutIntervenant", @disabled="disabled" }, generateTitle: true, genEmptyLine: false)
                        }
                        else
                        {
                            @Html.AlbDropDownListFor(m => m.SelectedTypeIntervenant, Model.ListeTypesIntervenant, "TypeIntervenant", htmlAttributes: new { @id = "TypeIntervenant", @albAutoComplete = "autoCompIntervenantType", albcontext="ajoutIntervenant" }, generateTitle: true, genEmptyLine: false)
                        }
                    </div>
                </div>
            </div>
            <div class="HeightRow">
                <div class="FloatLeft" style="padding-left: 5px;">
                    <input id="INCodeIntervenant" value="@Model.CodeSelectedIntervenant" class="INCodeDestinataire" albAutoComplete="autoCompIntervenantCode" albcontext="ajoutIntervenant"/>
                </div>
                <div class="FloatLeft">
                    <input id="INNomIntervenant" value="@Model.NomSelectedIntervenant" class="INNomDestinataireLong" albAutoComplete="autoCompIntervenant" albcontext="ajoutIntervenant"/>
                </div>
            </div>


        </div>
    </div>

    <div class="GroupFull GroupWithBorder ButtonsHeight LargeurDetailsSelection">
        <div class="ActionButtons ActionButtonRight">
            <button id="btnAnnulerSelectionTypeIntervenant" type="button">Annuler</button>
            <button id="btnValiderSelectionTypeIntervenant" type="button">Valider</button>
        </div>
    </div>

</div>
