@model ALBINGIA.OP.OP_MVC.Models.ModelesPages.ModeleInformationsSpecifiquesRisquesPage
@Html.HiddenFor(m => m.Code)
<div class="HeightRow">
    <div id="tabRisque" class="GenericColumn CursorPointer onglet-actif">
        <label>Informations spécifiques Risque</label>
    </div>
    <div id="tabObjet" class="GenericColumn CursorPointer onglet">
        <div>
            <label>Informations spécifiques Objet</label>
        </div>
    </div>
    <div id="tabGarantie" class="GenericColumn CursorPointer onglet">
        <div>
            <label>Informations spécifiques Garantie</label>
        </div>
    </div>
    <div class="onglet-vide">
    </div>
</div>
@Html.Partial("/Views/InformationsSpecifiquesRisques/InformationsSpecifiquesBody.cshtml", Model)


<div id="divFullScreenListeOpposition">
    <div class="overlay-background" style="z-index:2" >
    </div>
    <div id="divOppositions">
        <div class="GroupFull GroupWithBorder" id="divDialogOpposition">
            <div class="GroupTitle">
                Liste des oppositions/bénéficiaires sur le risque "@Model.DescriptifRisque"
            </div>
            <div class="HorizontalHalfWithGroupAdmin HeightDialogOpposition">
                <div class="GradientSection">
                    <div id="divLstOppositions">
                        <div id="divHeaderOppositions">
                            <table id="tblOppositionsHeader">
                                <tr>
                                    <th class="col_Type tablePersoHead" title="Type Financement">Type
                                    </th>
                                    <th class="col_Organisme tablePersoHead" title="Organisme">Organisme
                                    </th>
                                    <th class="col_Ville tablePersoHead" title="Ville">Ville
                                    </th>
                                    <th class="col_Description tablePersoHead" title="Description">Description
                                    </th>
                                    <th class="col_Reference tablePersoHead" title="Référence">Référence
                                    </th>
                                    <th class="col_Echeance tablePersoHead" title="Echéance">Echéance
                                    </th>
                                    <th class="col_Montant tablePersoHead" title="Montant">Montant
                                    </th>
                                    <th class="col_Action tablePersoHead">
                                        <img class="CursorPointer Action" src="@Url.Content("/Content/Images/plusajouter1616.png")" alt="Ajouter" title="Ajouter" id="btnAjouter"/>
                                        <img class="Action" src="@Url.Content("/Content/Images/plusajouter_gris1616.jpg")" alt="Ajouter" title="Ajouter" id="btnAjouterGris"/>
                                    </th>
                                </tr>
                            </table>
                        </div>
                        <div id="divBodyOppositions">
                            @if (Model.ListOppositions != null)
                            {
                                @Html.Partial("/Views/InformationsSpecifiquesRisques/ListeOppositions.cshtml", Model)
                                @*@Html.Partial("/Views/InformationsSpecifiquesRisques/ListeOppositions.cshtml", Model.ListOppositions)*@
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="FloatRight">
                <input type="button" id="btnFermerOppositions" value="Fermer" />
            </div>
        </div>
    </div>
</div>
<div id="divFullScreenEditOpposition">
    <div class="overlay-background" style="z-index:3" >
    </div>
    <div id="divEditOpposition">
    </div>
</div>
