@inherits AlbToReadOnlyHtml<ALBINGIA.OP.OP_MVC.Models.ModelesPages.ModeleOptTarAffNouvPage>
@AlbAddCssJsScripts.AlbAddCssToViews(new UrlHelper(ViewContext.RequestContext), new string[] { "vOptTarAffNouv.css" }, "~/Content/")
@AlbAddCssJsScripts.AlbAddJsToViews(new UrlHelper(ViewContext.RequestContext), new string[] { "albOptTarAffNouv.js" }, "~/Scripts/AlbingiaJS/")
@{
    Layout = "~/Views/Shared/LayoutHeader/LayoutMenu.cshtml";
}
<div class="FullWidth">
    @Html.Partial("~/Views/Shared/LayoutArbres/LayoutArbre.cshtml", Model.NavigationArbre)
    <div class="CommonForm FloatLeft">
        @Html.HiddenFor(m => m.CodeContrat)
        @Html.HiddenFor(m => m.VersionContrat)
        <div class="GroupFull GroupWithBorder">
            <div class="GroupTitle">
                Sélection des options tarifaires
            </div>
            <div class="HorizontalFullWithGroup">
                <div class="GradientSection">
                    <div class="HeightListOptTar">
                        @Html.Partial("LstOptTarAffNouv", Model.Garanties)
                    </div>
                </div>
            </div>
        </div>
        <div class="GroupFull GroupWithBorder ButtonsHeight">
            <div class="ActionButtons ActionButtonLeft" style="width: 600px;">
                <span class="msgWarning">Attention, les valeurs indiquées ne tiennent pas compte des risques ou objets éventuellement supprimés</span>
            </div>
            @*<div id="LoadingDiv" class="FloatLeft">
                <img src="/Content/Images/ajax-loader.gif" alt="" />
            </div>*@
            <div class="ActionButtons ActionButtonRight" style="width: 140px;">
                <input type="button" id="btnAnnuler" value="Annuler" tabindex="29" />
                <input type="button" id="btnSuivant" value="Terminer" tabindex="30" />
            </div>
        </div>
        <div id="divNouveauContrat">
            <div class="overlay-background" style="z-index:2" >
            </div>
            <div id="divDataNouveauContrat">
                <div>
                    <center>
                        <b>Vous allez finaliser la transformation de l'offre en affaire nouvelle.</b></center>
                </div>
                <br />
                <div>
                    <center>
                        <b>Sélectionnez une action à réaliser :</b></center>
                </div>
                <br />
                <br />
                <div class="ConfirmationButtons">
                    <div class="FloatLeft" style="position: absolute; bottom: 0px; padding-bottom: 10px;">
                        @*<input type="button" id="btnConfAnnuler" value="Annuler" />*@
                    </div>
                    <div class="FloatRight">
                        <div style="padding-bottom: 5px;">
                            <input type="button" id="btnConfHome" value="Retourner à l'accueil" />
                        </div>
                        <div style="padding-bottom: 5px;">
                            <input type="button" id="btnConfCreate" value="Créer un nouveau contrat" />
                        </div>
                        <div>
                            <input type="button" id="btnConfValider" value="Poursuivre la saisie du contrat" style="font-weight: bold;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
