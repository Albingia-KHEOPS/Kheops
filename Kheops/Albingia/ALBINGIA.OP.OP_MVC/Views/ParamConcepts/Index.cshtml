@model ALBINGIA.OP.OP_MVC.Models.ModelesPages.ModeleParamConceptsPage
@AlbAddCssJsScripts.AlbAddCssToViews(new UrlHelper(ViewContext.RequestContext), new string[] { "vParamConcepts.css" }, "~/Content/")
@AlbAddCssJsScripts.AlbAddJsToViews(new UrlHelper(ViewContext.RequestContext), new string[] { "albParamConcepts.js" }, "~/Scripts/AlbingiaJS/")
@{
    Layout = "~/Views/Shared/LayoutHeader/LayoutMenu.cshtml";
}
<div class="FullWidth">
    @Html.HiddenNoName("idConceptSuppr", string.Empty)
    @Html.HiddenNoName("AdditionalParam", Model.AdditionalParam)
    <input type="hidden" id="userHasRights" value="@(ALBINGIA.OP.OP_MVC.Common.CacheUserRights.UserRights.Any(el => el.TypeDroit == ALBINGIA.Framework.Common.Constants.TypeDroit.M.ToString()))" />
    <div>
        @Html.Partial("~/Views/Shared/LayoutArbres/LayoutArbreBackOffice.cshtml")
    </div>
    <div class="CommonForm FloatLeft WidthBackOffice">
        <div id="contenu">
            <div class="CommonForm FloatLeft WidthBackOffice">
                <div class="GroupFull GroupWithBorder GroupBackOffice ">
                    <div class="HorizontalHalfWithGroupAdmin ">
                        <div class="GradientSection">
                            <div class="HeightRow">
                                <div class="FloatLeft PaddingLeft10">
                                    <div class="PaddingLeft5">
                                        <label>Code contenant :</label>
                                    </div>
                                    <div class="FloatLeft PaddingLeft5">
                                        <input id="RechercheCode" maxlength="5" albautocomplete="autoCompCodeConcept" />
                                    </div>
                                </div>
                                <div class="FloatLeft PaddingLeft10">
                                    <div class="PaddingLeft5">
                                        <label>Description contenant :</label>
                                    </div>
                                    <div class="FloatLeft PaddingLeft5">
                                        <input id="RechercheDescription" class="searchField" maxlength="35" albautocomplete="autoCompLibConcept" />
                                    </div>
                                    <div class="FloatLeft PaddingLeft" id="btnRechercherConcepts">
                                        <button type="button" id="btnRechercher" albshortcut="true" data-accesskey="r">
                                            <img src="@Url.Content("/Content/Images/loupe1616.png")" alt="Rechercher" title="Rechercher" />
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div>
                                &nbsp;
                            </div>
                            <div id="divLstConcepts">
                                <div id="divConceptsHeader">
                                    <table id="tblConceptsHeader">
                                        <tr>
                                            <th class="col_HCodeConcept tablePersoHead">Code concept
                                            </th>
                                            <th class="col_HDescriptionConcept tablePersoHead">Description
                                            </th>
                                            <th class="col_HAction tablePersoHead" colspan="2">
                                                @if (Model.AdditionalParam == "**" || Model.AdditionalParam == "30")
                                                {
                                                    <img class="CursorPointer" src="@Url.Content("/Content/Images/plusajouter1616.png")" alt="Ajouter" title="Ajouter" id="btnAjouterConcept" />
                                                }
                                            </th>
                                        </tr>
                                    </table>
                                </div>
                                <div id="divConceptsBody" class="divHeight">
                                    @if (Model.ListeConcepts != null)
                                    {
                                        @Html.Partial("ListeConcepts", Model.ListeConcepts)
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="VoletDetails" class="GroupFull GroupWithBorder GroupBackOffice GroupHeight FloatLeft">
                    <div id="divConceptDetails">
                    </div>
                </div>
                <div class="GroupButton GroupFull GroupWithBorder ButtonsHeight ButtonsWidth">
                    <div class="ActionButtons ActionButtonLeft">
                    </div>
                    <div id="LoadingDiv" class="FloatLeft">
                        <img src="/Content/Images/ajax-loader.gif" alt="" />
                    </div>
                    <div class="ActionButtons ActionButtonRight">
                        <input type="button" id="btnCancel" value="Retour" tabindex="29" onclick="Javascript: Annuler();" />
                    </div>
                </div>
            </div>
        </div>@*fin contenu*@
    </div>
</div>
